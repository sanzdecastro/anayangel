      );
      const envelopeGroupOpened = document.querySelector(
        ".envelope-group .sobre-open"
      );

      const content = document.querySelector(".content");

      gsap.set(envelopeGroup, {
        xPercent: -150,
        rotate: 180,
      });

      gsap.set(back, {
        autoAlpha: 0,
      });

      gsap.set(intro, {
        yPercent: -350,
      });

      gsap.set(content, {
