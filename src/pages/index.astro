            duration: 1,
            ease: "power2.inOut",
          },
          "<"
        )
        .to(intro, {
          autoAlpha: 1,
          duration: 1,
          ease: "power2.inOut",
        })
        .to(intro, {
          delay: 1,
          autoAlpha: 1,
          yPercent: 0,
          duration: 0.5,
          ease: "power2.inOut",
        })
        .to(
          envelopeGroup,
